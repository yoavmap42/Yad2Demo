<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/ol.css" rel="stylesheet" />
    <link href="~/Content/ol3-layerswitcher.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#82afcc;border-color:#fff;">
    </div>
    <div class="container body-content">
        <div class="body-inner">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p> &copy; @DateTime.Now.Year - Powered By <img src="~/Content/images/Map42LargeTransparent36.png" /> </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/ol.js"></script>
    <script src="~/Scripts/ol3-layerswitcher.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>